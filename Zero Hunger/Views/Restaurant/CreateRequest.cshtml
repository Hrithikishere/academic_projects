
@{
    ViewBag.Title = "CreateRequest";
    Layout = "~/Views/Shared/_LayoutRestaurant.cshtml";
}

<h2>CreateRequest</h2>

<form action="" method="post">
    <div class="form-group">
        <label>Request ID</label>
        <input type="text" class="form-control" name="RequestId" placeholder="Enter Employee ID: " />
    </div>
    <div class="form-group">
        <label>Food Name</label>
        <input type="text" class="form-control" name="FoodName" placeholder="Enter Name: " />
    </div>
    <div class="form-group">
        <label>Food Type</label>
        <input type="text" class="form-control" name="FoodType" placeholder="Enter Food Type: " />
    </div>
    <div class="form-group">
        <label>Quantity</label>
        <input type="number" class="form-control" name="Quantity" placeholder="Enter Quantity in Kg: " />
    </div>
    <div class="form-group">
        <label>Status</label>
        <input type="text" class="form-control" name="Status" placeholder="Enter Status: " />
    </div>
    <div class="form-group">
        <label>Address</label>
        <input type="date" class="form-control" name="Address" placeholder="Enter Pickup Address: " />
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Create" />
    </div>
</form>